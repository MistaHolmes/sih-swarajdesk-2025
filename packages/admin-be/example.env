# ===========================================
# Admin Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
ADMIN_BE_PORT=3002

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/swarajdesk?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Secrets Manager (for production)
SECRET_NAME_AWS_USER_BE=sih-swaraj-user-be
AWS_REGION=ap-south-2
SECRETS_AWS_ACCESS_KEY_ID=your-aws-access-key
SECRETS_AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# GCP Vertex AI Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
ENDPOINT_ID=your-endpoint-id
GCP_CREDENTIALS_JSON={"type":"service_account",...}
