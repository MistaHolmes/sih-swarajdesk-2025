# ===========================================
# User Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Server Configuration
NODE_ENV=development
PORT=3000
WS_PORT=3001

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/swarajdesk?schema=public

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (for file uploads)
AWS_REGION=ap-south-2
AWS_BUCKET=sih-swaraj
S3_AWS_ACCESS_KEY_ID=your-s3-access-key
S3_AWS_SECRET_ACCESS_KEY=your-s3-secret-key

# AWS Secrets Manager (for production)
SECRET_NAME_AWS_USER_BE=sih-swaraj-user-be
SECRETS_AWS_ACCESS_KEY_ID=your-aws-access-key
SECRETS_AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# CORS Origins (optional)
frontend=http://localhost:3002
frontend_alt=http://localhost:3002
backend=http://localhost:3000
worker=http://localhost:3005
frontend_admin=http://localhost:3003
backend_admin=http://localhost:3002

# External API
pinAPIBase=https://api.postalpincode.in/pincode
